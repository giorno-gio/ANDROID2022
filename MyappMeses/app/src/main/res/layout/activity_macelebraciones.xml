<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MACelebraciones">

    <TextView
        android:id="@+id/txtNombreMes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CELEBRACIONES"
        android:textSize="35sp"
        android:layout_gravity="center"
        android:layout_margin="15sp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNombreCeleb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre de la celbracion"
                android:textSize="20sp"
                android:layout_margin="20sp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/txtDescrCeleb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion de la celbracion"
                android:textSize="15sp"
                android:layout_margin="10sp"
                android:justificationMode="inter_word"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>