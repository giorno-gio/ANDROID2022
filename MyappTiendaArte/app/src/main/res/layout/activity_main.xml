<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<include
    android:id="@+id/toolbar"
    layout="@layout/toolbar"/>
    <TextView
        android:id="@+id/txtBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:gravity="center"
        android:text="BIENVENIDO A LA TIENDA DE ARTE MODERNO"
        android:textSize="20sp"
        android:textColor="#1B51B5"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgArte"
        android:layout_width="2300sp"
        android:layout_height="200sp"
        android:layout_below="@id/txtBienvenida"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/ic_arte" />

    <LinearLayout
        android:id="@+id/llEsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/imgArte"
        android:layout_margin="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ELIGE UNA CATEGORIA PARA CONOCER NUESTROS PRODUCTOS:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_margin="5sp"
            android:textColor="#1B51B5"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/listCategoriasPintura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llEsp"
        android:layout_margin="10sp"
        />

</RelativeLayout>