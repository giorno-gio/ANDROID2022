<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MABuscarIdSQLite"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtPrecioBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar bebida por ID"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtCodigoBuscar"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:hint="Ingresa codigo de bebida a buscar"
            android:inputType="number" />

        <ImageButton
            android:id="@+id/imgBuscar"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_margin="15sp"
            android:src="@mipmap/ic_launcher_round" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:elevation="25sp"
        app:cardBackgroundColor="#03A9F4"
        app:cardCornerRadius="10sp"
        app:cardElevation="15sp"
        app:contentPadding="15sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCodigoBuscar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15sp"
                android:text="Codigo:"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtNombreBuscar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15sp"
                android:text="Nombre:"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtSaborBuscar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15sp"
                android:text="Sabor:"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtPresentacionBuscar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15sp"
                android:text="Presentacion:"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtTipoBuscar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15sp"
                android:text="Tipo:"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="15sp"
                android:text="Precio:"
                android:textColor="@color/black"
                android:textSize="25sp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>