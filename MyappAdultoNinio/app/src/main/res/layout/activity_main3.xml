<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <TextView
        android:id="@+id/txtTituloA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADULTO"
        android:layout_marginLeft="10sp"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="10sp"
        />

    <ImageView
        android:id="@+id/imgvAuto"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:src="@drawable/ic_auto" />

    <TextView
        android:id="@+id/txtNM1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgvAuto"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="70sp"
        android:inputType="text"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNM1"
        android:gravity="center"
        android:text="*"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/txtNM2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtM"
        android:layout_marginLeft="10sp"
        android:inputType="text"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtRespuestaM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNM2"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="15sp"
        android:layout_marginRight="10sp"
        android:hint="Ingresa la respuesta"
        android:inputType="number" />


    <Button
        android:id="@+id/btnMulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtRespuestaM"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="10sp"
        android:text="multiplicar" />

    <Button
        android:id="@+id/btnsalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtRespuestaM"
        android:layout_marginTop="10sp"
        android:layout_marginRight="50sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:text="salir"
        />

    <TextView
        android:id="@+id/txtResultadoM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnMulti"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="15sp"
        android:gravity="center"
        android:text="..."
        android:textSize="20sp" />


</RelativeLayout>